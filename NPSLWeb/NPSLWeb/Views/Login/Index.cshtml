@*@Microsoft.Extensions.PlatformAbstractions.PlatformServices.Default.Application.ApplicationVersion*@
@model NPSLCore.Models.DB.Users
@{
    ViewData["Title"] = "Index";
    Layout = null;

}

<html lang="en">
<head>
    <title> Login Page</title>
    <script src="~/js/CustomUtils.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <link href="~/lib/bootstrap/dist/css/slate-theme.css" rel="stylesheet" />
    <link href="~/css/global.css" rel="stylesheet" />
    <link href="~/css/notify.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/js/login.js" type="text/javascript"></script>
    <script src="~/lib/jquery/notify.js"></script>
    <script src="http://knockoutjs.com/downloads/knockout-3.0.0.debug.js" type="text/javascript"></script>
</head>
<body>
    <div class="header">
        <div>Net<span>Tech</span></div>
    </div>
    <div class="container-fluid bg">
        <div class="row">
            <div class="col-md-4 col-sm-4 col-xs-12"></div>
            <div class="col-md-4 col-sm-4 col-xs-12">
                <form id="loginForm" class="form-conatiner">
                    <div class="form-group">
                        <label class="user">User Id</label>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i> </span>
                            @Html.TextBoxFor(m => m.UserId, new { @class = "form-control", placeholder = "User Id", onkeypress = "return AllowNumbersOnly(event)", required = "required", oninvalid = "this.setCustomValidity('Please Enter User Id')", oninput = "setCustomValidity('')" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="user">Password</label>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i> </span>
                            @Html.PasswordFor(m => m.UserPassword, new { @class = "form-control", placeholder = "Password", required = "required", oninvalid = "this.setCustomValidity('Please Enter Password')", oninput = "setCustomValidity('')" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="pull-right">
                            <input type="submit" class="btn btn-success" value="Login">
                            <input type="reset" class="btn btn-danger" value="Reset">
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
 </body>
</html>
@section AppScriptsPreBinding {
    <script type="text/javascript">
        window.currentPage = document.appConfig.screens.home;
    </script>
}
