@*@Microsoft.Extensions.PlatformAbstractions.PlatformServices.Default.Application.ApplicationVersion*@
@{
    ViewData["Title"] = "Index";
    Layout = null;

}

<html lang="en">
<head>
    <title> Login Page</title>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <link href="~/css/global.css" rel="stylesheet" />
    <link href="~/css/notify.css" rel="stylesheet" />
    <script src="~/Scripts/js/login.js" type="text/javascript"></script>
    <script src="~/js/CustomUtils.js"></script>
    <script src="~/lib/jquery/notify.js"></script>
    <script src="http://knockoutjs.com/downloads/knockout-3.0.0.debug.js" type="text/javascript"></script>
</head>
<body>
    <div class="header">
        <div>Net<span>Tech</span></div>
    </div>
    <div class="container-fluid bg">
        <div class="row">
            <div class="col-md-4 col-sm-4 col-xs-12"></div>
            <div class="col-md-4 col-sm-4 col-xs-12">
                <form id="loginForm" class="form-conatiner">
                    <div class="col-lg-12">
                        <a class="btn btn-default demo-1" href="javascript:;">Default</a> <a class="btn btn-warning demo-4" href="javascript:;">Warning</a> <a class="btn btn-danger demo-5" href="javascript:;">Danger</a> <a class="btn btn-info demo-6" href="javascript:;">Top-right</a> <a class="btn btn-success demo-2" href="javascript:;">Success</a> <a class="btn btn-info demo-3" href="javascript:;">Info</a>
                    </div>
                    <div class="form-group">
                        <label class="user">User Id</label>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i> </span>
                            <input type="text" onkeypress="return AllowNumbersOnly(event)" class="form-control" id="userId" placeholder="User Id" required oninvalid="this.setCustomValidity('Please Enter User Id')" oninput="setCustomValidity('')">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="user">Password</label>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i> </span>
                            <input type="password" class="form-control" id="userPassword" placeholder="Password" required oninvalid="this.setCustomValidity('Please Enter Password')" oninput="setCustomValidity('')">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="pull-right">
                            <input type="submit" class="btn btn-success" value="Login">
                            <input type="reset" class="btn btn-danger" value="Reset">
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        (function () {

            $('.demo-1').on('click', function (e) {
                e.preventDefault();
                $.notify('I am a alert box.');
            });
            $('.demo-2').on('click', function (e) {
                e.preventDefault();
                $.notify('I am a success box.', 'success');
            });
            $('.demo-3').on('click', function (e) {
                e.preventDefault();
                $.notify('I am an info box.', 'info');
            });
            $('.demo-4').on('click', function (e) {
                e.preventDefault();
                $.notify('I am a warning box.', 'warning');
            });
            $('.demo-5').on('click', function (e) {
                e.preventDefault();
                $.notify('I am a danger box.', 'danger');
            });
            $('.demo-6').on('click', function (e) {
                e.preventDefault();
                $.notify('I am a default info box.', { pos: 'top-right', });
            });

        })(jQuery);
    </script>



</body>
</html>
@section AppScriptsPreBinding {
    <script type="text/javascript">
        window.currentPage = document.appConfig.screens.home;
    </script>
}
