<!DOCTYPE html>

<html lang="en">
<head>
    <title>@ViewData["Title"] - NPSLWeb</title>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
</head>
<body>
    @{
        var loginSession = new Byte[20];
        bool nameOK = Context.Session.TryGetValue("LoginSession", out loginSession);
        if (nameOK)
        {
            string loginSessionResult = System.Text.Encoding.UTF8.GetString(loginSession);

            <nav class="navbar navbar-inverse">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <a class="navbar-brand" href="#">Net-Tech Logo</a>
                    </div>
                    <ul class="nav navbar-nav">
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">Main <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="#">Reconcile</a></li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">Admin <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="#">Users</a></li>
                                <li><a href="#">Template</a></li>
                                <li><a href="#">Groups</a></li>
                            </ul>
                        </li>
                        <li><a href="/Home/About">About</a></li>
                        <li><a href="#">Contact Us</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li><a><span class="glyphicon glyphicon-user"></span> Welcome: @loginSessionResult</a></li>
                        <li><a href="#"><span class="glyphicon glyphicon-log-out"></span> Log Out</a></li>
                    </ul>
                </div>
            </nav>
            <div class="container">
                @RenderBody()
                <hr />
                <footer class="bottom-right">
                    <p>&copy; 2018 - NPSLWeb</p>
                </footer>
            </div>

        }
    }
    @RenderSection("Scripts", required: false)
</body>
</html>
